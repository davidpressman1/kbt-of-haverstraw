<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tickerSpan = document.querySelector('.news-track span');
    const defaultText =
      'ðŸ”” Shabbos Mevorchim Kiddush this week â€¢ ðŸ“… New zmanim updated â€¢ ðŸ§± Building campaign updates coming soon â€¢ ðŸ”¥ Thursday night Parsha shiur at 9:15 PM â€¢';

    const storedText = localStorage.getItem('kbtNewsTicker');
    if (tickerSpan) {
      tickerSpan.textContent = storedText || defaultText;
    }

    const yearEl = document.getElementById('year');
    if (yearEl) {
      yearEl.textContent = new Date().getFullYear();
    }

    const form = document.getElementById('admin-news-form');
    const textarea = document.getElementById('admin-news-text');
    const status = document.getElementById('admin-status');

    if (form && textarea && tickerSpan) {
      textarea.value = tickerSpan.textContent.trim();

      form.addEventListener('submit', function (e) {
        e.preventDefault();
        const value = textarea.value.trim();
        if (!value) return;
        tickerSpan.textContent = value;
        localStorage.setItem('kbtNewsTicker', value);
        if (status) {
          status.textContent = 'Updated';
          setTimeout(() => { status.textContent = ''; }, 2000);
        }
      });
    }
  });
</script>

